package com.mycompany.mysterygame;
import java.util.Scanner;
import java.util.ArrayList;

/**
 *
 * @author LPaul2026
 */
public class MysteryGame {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        String playerChoice;
        System.out.println("Welcome to the game of Mystery!");
        String player1 = "detective";
        String player2 = "suspect";
        String player3 = "bystander";
        String player4 = "victim";
//        enum CrimeType {murder, theft, fraud, arson}
//        System.out.println("Choose the type of crime.");        
        System.out.println("Your choices to play are: ");
        System.out.println("Detective. To choose this character, press 1");
        System.out.println("Suspect. To choose this character, press 2");
        System.out.println("Bystander. To choose this character, press 3");
        System.out.println("Victim. To choose this character, press 4");
        String input = scan.nextLine();
        ArrayList<String> validChoices = new ArrayList<>();
        validChoices.add("1");
        validChoices.add("2");
        validChoices.add("3");
        validChoices.add("4");
        while(!validChoices.contains(input)){
            System.out.println("You have entered an invalid character. Please select 1, 2, 3, or 4 to continue the game.");
            input = scan.next();
        }
        switch(input) {
            case "1":
                playerChoice = player1;
                break;
            case "2":
                playerChoice = player2;
                break;
            case "3":
                playerChoice = player3;
                break;
            case "4":
                playerChoice = player4;
                break;
            default:
                playerChoice = player1;
        }
        System.out.println("You have chosen " + playerChoice);
        if (playerChoice.equals(player1)){
            Detective Game = new Detective();
        }
        else if (playerChoice.equals(player2)){
            System.out.println("You hear the doorbell ring. ");
        }
    }
}

class Detective{
    public Detective(){
        Victim MrBeauregard = new Victim("Alexander Beauregard", 75, " financially wealthy, morally bankrupt businessman with plenty of \nenemies.", "death by posioning");
        ArrayList<String> suspects = new ArrayList<>();
        Suspect wife = new Suspect("Joanna", 25, "Mr. Beauregard's young wife", "was out watching a movie the entire evening.");
        Suspect son = new Suspect("Benjamin", 20, "Mr. Beauregard's son from a previous marriage", "was playing video games with his friend in his room all night.");
        Suspect cook = new Suspect("Edith", 77, "the elderly cook", "has no alibi. Was home when murder ocurred.");
        Suspect mother = new Suspect("Genevieve", 99, "Mr. Beauregard's ancient mother", "has no alibi. Was home when murder ocurred.");
        Suspect brother = new Suspect("Winston", 68, "Mr. Beauregard's younger brother", "has no alibi. Was home when murder ocurred.");
        suspects.add(wife.GetName());
        suspects.add(son.GetName());
        suspects.add(cook.GetName());
        suspects.add(mother.GetName());
        suspects.add(brother.GetName());
        Witness gardener = new Witness("Jimmy", 3, "witnessed Edith preparing the meal without adding anything out of the ordinary. Also, they claim that they were talking to Winston from 5:00 - 5:30. ", "the family gardener");
        Witness friend = new Witness("Joshua", 1, "seen Joanna sneakily dumping something into the bushes behind the house. Also, they claim that Benjamin didn't leave his room at all when they were playing video games together. ", "Benjamin's childhood friend and neighbor");
        Witness passerby = new Witness("Dani", 4, "heard two male voices arguing loudly the night before the murder. ", "a stranger who was walking by the house");
        String fact1 = "The poison was in Mr. Beauregard's dinner, which he ate at 5:30. Genevieve and Winston ate dinner with him and did not get sick.";
        String fact2 = "The house has a security guard who swears no one else could have entered the house at the time of the murder. All the doors and windows were locked";
        String fact3 = "Edith finished preparing dinner at 5. The food was on the table at 5:15. Each person's food was in a different plate.";
        String hint1 = "One of the alibis are not true";
        String hint2 = "The food could only be poisoned by someone in the house between 5:15 and 5:30";
        String hint3 = "One of the witnesses are lying. Compare their credibility levels...";
        Scanner scan = new Scanner(System.in);
        System.out.println("You're relaxing in your living room when you hear the telephone ring. You pick it up and a frantic voice \nappears on the other end. 'Mr. Detective, there's been a murder at XXXX Alphabet Street! Please come immediately!");        
        System.out.println("Enter any key to examine the scene.");
        String wait = scan.next();
        System.out.println("When you arrive on the scene, you see: ");
        System.out.println(MrBeauregard + ". \nEnter any key to see suspect list.");
        wait = scan.next();
        System.out.println("The potential suspects in the case: \n" + wife + "\n" + son + "\n" + cook + "\n" + mother + "\n" + brother + "\nEnter any key to see the suspects' alibis.");
        wait = scan.next();
        System.out.println("Alibis:\n" + wife.GetName() + " " + wife.GetAlibi() + "\n" + son.GetName() + " " + son.GetAlibi() + "\n" +  cook.GetName() + " " + cook.GetAlibi() + "\n" + mother.GetName() + " " + mother.GetAlibi() + "\n" + brother.GetName() + " " + brother.GetAlibi());
        System.out.println("Enter any character to see the facts of the case");
        wait = scan.next();
        System.out.println("Fact 1: " + fact1 + "\nFact 2: " + fact2 + "\nFact 3: " + fact3 + "\nEnter any key to see the list of witnesses");
        wait = scan.next();
        System.out.println("Witnesses:\n" + gardener + "\n" + friend + "\n" + passerby + "\nEach witness has a credibility level between 1 and 5, which is how likely they are to be telling the truth. 1 is the most unlikely and 5 is the most likely. Enter any key to see Review");
        wait = scan.next();
        System.out.println("Enter the name of any character you want to review: Alexander, Joanna, Benjamin, Edith, Genevieve, Winston, Jimmy, Joshua or Dani.\nEnter 1 to review the facts of the case. Enter 4 if you're ready to move on.");
        String review = scan.next();
        while (!review.equals("4")){
            switch (review) {
                case "Alexander" -> {
                    System.out.println(MrBeauregard);
                }
                case "Joanna" -> {
                    System.out.println(wife);
                }
                case "Benjamin" -> {
                    System.out.println(son);
                }
                case "Edith" -> {
                    System.out.println(cook);
                }
                case "Genevieve" -> {
                    System.out.println(mother);
                }
                case "Winston" -> {
                    System.out.println(brother);
                }
                case "Jimmy" -> {
                    System.out.println(gardener);
                }
                case "Joshua" -> {
                    System.out.println(friend);
                }
                case "Dani" -> {
                    System.out.println(passerby);
                }
                case "1" -> {
                    System.out.println(fact1 + "\n" + fact2 + "\n" + fact3);
                }
                default -> {
                    System.out.println("Please enter a valid input.");
                }
            }
            System.out.println("Enter another name or 1 to continue reviewing. Enter 4 to move on.");
            review = scan.next();
        }
        System.out.println("Now that you've met all the characters and gathered all the evidence, you're ready to make a guess at who killed Mr. Beauregard! \nEnter the suspect you think did it: Joanna, Benjamin, Edith, Genevieve, or Winston. If you need some hints, enter hint instead of your guess.");
        String decision = scan.next();
        while (!decision.equals("Benjamin")){
            if (decision.equals("hint")){
                System.out.println(hint1 + "\n" + hint2 + "\n" + hint3 + "\nEnter the suspect you think did it.");
                decision = scan.next(); 
            }
            else {
                System.out.println("Incorrect. Please guess again.");
                decision = scan.next();
            }
        }
        System.out.println("Congratulations! You've found the culprit! Thanks for playing!");
    }
}

class Victim{
    private String name;
    private int age;
    private String description;
    private String mannerOfDeath;
    public Victim(String inName, int inAge, String inDesc, String inManner){
        name = inName;
        age = inAge;
        description = inDesc;
        mannerOfDeath = inManner;
    }
    public String GetName(){
        return name;
    }
    public int GetAge(){
        return age;
    }
    public String GetDesc(){
        return description;
    }
    public String GetManner(){
        return mannerOfDeath;
    }
    
    public String toString(){
        String ageString = ", a " + age + " year old";
        String mannerString = " The examining doctor tells you it was " + mannerOfDeath;
        return name + ageString + description + mannerString;
    }
}

class Suspect{
    private String name;
    private int age;
    private String description;
    private String alibi;
    
    public Suspect(String inName, int inAge, String inDesc, String inAlibi){
        name = inName;
        age = inAge;
        description = inDesc;
        alibi = inAlibi;
    }
    public String GetName(){
        return name;
    }
    
    public String GetAlibi(){
        return alibi;
    }
    
    public String toString(){
        String ageString = ", " + age + " years old, ";
        String descriptionString = "is " + description;
        return name + ageString + descriptionString;
    }
}

class Witness{
    private String name;
    private int credibility;
    private String evidence;
    private String relationship;
    
    public Witness(String inName, int inCred, String inEvid, String inRelat){
        name = inName;
        credibility = inCred;
        evidence = inEvid;
        relationship = inRelat;
    }
    
    public String GetName(){
        return name;
    }
    
    public int GetCredibility(){
        return credibility;
    }
    
    public String GetEvidence(){
        return evidence;
    }
    
    public String GetRelationship(){
        return relationship;
    }
    
    public String toString(){
        String credString = " has credibility level " + credibility;
        return name + credString + ". They claim to have " + evidence + " \nThis person is" + relationship;
    }
    
}
