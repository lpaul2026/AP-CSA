package com.mycompany.mysterygame;
import java.util.Scanner;
import java.util.ArrayList;

/**
 *
 * @author lizmp
 */
public class MysteryGame {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        String playerChoice;
        System.out.println("Welcome to the game of Mystery!");
        String player1 = "detective";
        String player2 = "suspect";
        String player3 = "bystander";
        String player4 = "victim";
//        enum CrimeType {murder, theft, fraud, arson}
//        System.out.println("Choose the type of crime.");        
        System.out.println("Your choices to play are: ");
        System.out.println("Detective. To choose this character, press 1");
        System.out.println("Suspect. To choose this character, press 2");
        System.out.println("Bystander. To choose this character, press 3");
        System.out.println("Victim. To choose this character, press 4");
        String input = scan.nextLine();
        ArrayList<String> validChoices = new ArrayList<>();
        validChoices.add("1");
        validChoices.add("2");
        validChoices.add("3");
        validChoices.add("4");
        while(!validChoices.contains(input)){
            System.out.println("You have entered an invalid character. Please select 1, 2, 3, or 4 to continue the game.");
            input = scan.next();
        }
        switch(input) {
            case "1":
                playerChoice = player1;
                break;
            case "2":
                playerChoice = player2;
                break;
            case "3":
                playerChoice = player3;
                break;
            case "4":
                playerChoice = player4;
                break;
            default:
                playerChoice = player1;
        }
        //enum CrimeType {murder, theft, fraud, arson}
        System.out.println("You have chosen " + playerChoice);
        if (playerChoice.equals(player1)){
            Detective Game = new Detective();
        }
        else if (playerChoice.equals(player2)){
            System.out.println("You hear the doorbell ring. ");
        }
    }
}

class Detective{
    public Detective(){
        Victim MrBeauregard = new Victim("Alexander Beauregard", 75, " financially wealthy, morally bankrupt businessman with 4 ex-wives and plenty of \nenemies.", "death by posioning");
        ArrayList<String> suspects = new ArrayList<>();
        Suspect wife = new Suspect("Joanna", 25, "Mr. Beauregard's young wife", "was out watching a movie the entire evening.");
        Suspect son = new Suspect("Benjamin", 20, "Mr. Beauregard's son from a previous marriage", "was playing video games with his friend in his room all night.");
        Suspect cook = new Suspect("Edith", 77, "the elderly cook", "has no alibi. Was home when murder ocurred.");
        Suspect mother = new Suspect("Genevieve", 99, "Mr. Beauregard's ancient mother", "has no alibi. Was home when murder ocurred.");
        Suspect brother = new Suspect("Winston", 68, "Mr. Beauregard's younger brother", "has no alibi. Was home when murder ocurred.");
        suspects.add(wife.GetName());
        suspects.add(son.GetName());
        suspects.add(cook.GetName());
        suspects.add(mother.GetName());
        suspects.add(brother.GetName());
        Witness gardener = new Witness("Jimmy", 3, "witnessed Edith preparing the meal without adding anything out of the ordinary", "family gardener");
        Witness friend = new Witness("Joshua", 1, "saw Joanna sneakily dumping something into the bushes behind the house. Also, that Benjamin didn't leave his room at all when they were playing video games together", "Benjamin's childhood friend and neighbor");
        Witness passerby = new Witness("David", 4, "heard two male voices arguing loudly the night before the murder", "stranger who was walking by the house");
        String fact1 = "The poison was in Mr. Beauregard's dinner, which he ate at 5:30. Genevieve and Winston ate dinner with him and did not get sick.";
        String fact2 = "The house has a security guard who swears no one else could have entered the house at the time of the murder. All the doors and windows were locked";
        String fact3 = "Edith finished preparing dinner at 5. The food was on the table at 5:15. Each person's food was in a different plate.";
        String hint1 = "One of the alibis are not true";
        String hint2 = "The food could only be poisoned by someone in the house between 5:15 and 5:30";
        String hint3 = "One of the witnesses are lying. Compare their credibility levels...";
        Scanner scan = new Scanner(System.in);
        System.out.println("You're relaxing in your living room when you hear the telephone ring. You pick it up and a frantic voice \nappears on the other end. 'Mr. Detective, there's been a murder at XXXX Alphabet Street! Please come immediately!");        
        System.out.println("Enter any character to examine the scene.");
        String wait = scan.next();
        System.out.println("When you arrive on the scene, you see: ");
        System.out.println(MrBeauregard.GetName() + ", a " + MrBeauregard.GetAge() + " year old" + MrBeauregard.GetDesc() + " The examining doctor tells you it was " + MrBeauregard.GetManner() + ". \nEnter any character to see suspect list.");
        wait = scan.next();
        System.out.println("The potential suspects in the case: \n" + wife + "\n" + son + "\n" + cook + "\n" + mother + "\n" + brother + "\nEnter any character to see the suspects' alibis.");
        wait = scan.next();
        System.out.println(wife.GetName() + " " + wife.GetAlibi() + "\n" + son.GetName() + " " + son.GetAlibi() + "\n" +  cook.GetName() + " " + cook.GetAlibi() + "\n" + mother.GetName() + " " + mother.GetAlibi() + "\n" + brother.GetName() + " " + brother.GetAlibi());
        System.out.println("Enter any character to see the facts of the case");
        wait = scan.next();
        System.out.println("Fact 1: " + fact1 + "\nFact 2: " + fact2 + "\nFact 3: " + fact3);
    }
    
}

class Victim{
    private String name;
    private int age;
    private String description;
    private String mannerOfDeath;
    public Victim(String inName, int inAge, String inDesc, String inManner){
        name = inName;
        age = inAge;
        description = inDesc;
        mannerOfDeath = inManner;
    }
    public String GetName(){
        return name;
    }
    public int GetAge(){
        return age;
    }
    public String GetDesc(){
        return description;
    }
    public String GetManner(){
        return mannerOfDeath;
    }
}

class Suspect{
    private String name;
    private int age;
    private String description;
    private String alibi;
    
    public Suspect(String inName, int inAge, String inDesc, String inAlibi){
        name = inName;
        age = inAge;
        description = inDesc;
        alibi = inAlibi;
    }
    public String GetName(){
        return name;
    }
    
    public String GetAlibi(){
        return alibi;
    }
    
    public String toString(){
        String ageString = ", " + age + " years old, ";
        String descriptionString = "is " + description;
        return name + ageString + descriptionString;
    }
}

class Witness{
    private String name;
    private int credibility;
    private String evidence;
    private String relationship;
    
    public Witness(String inName, int inCred, String inEvid, String inRelat){
        name = inName;
        credibility = inCred;
        evidence = inEvid;
        relationship = inRelat;
    }
    
    public String GetName(){
        return name;
    }
    
    public int GetCredibility(){
        return credibility;
    }
    
    public String GetEvidence(){
        return evidence;
    }
    
    public String GetRelationship(){
        return relationship;
    }
}
