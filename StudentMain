//public class
public class StudentMain{
    public static void main(String args[]){
        Scanner scan = new Scanner(System.in);
        Student st1 = new Student("Bob", "Smith");
        String firstName;
        String lastName;
        int average = st1.getAverage();
        System.out.println(st1);
        System.out.println("Would you like to add another student? yes/no");
        String dec = scan.nextLine();
        if (dec.equals("yes")){
            System.out.println("Enter the first name of the student");
            firstName = scan.next();
            System.out.println("Enter the last name of the student");
            lastName = scan.next();
        }
        Student st2 = new Student(firstName, lastName);
    }
}
//basic class Student - should have 3 courses
class Student{
    public int avg;
    private String firstName, lastName;
    Course calc = new Course("Calculus");
    Course bio = new Course("Biology");
    Course phys = new Course("Physics");
    int c = calc.setScore(85);
    int b = bio.setScore(92);
    int p = phys.setScore(76);
    //empty constructor to create empty Student object
    public Student()
    {
        firstName = "";
        lastName = "";
    }
    //basic constructor to create Student object with name only
    public Student(String first, String last){
        firstName = first;
        lastName = last;
    }    
    public int getAverage(){
        avg = (c + b + p)/3;
        return avg;
    }
    //needs a constructor to include 3 course objects
    //basic toString code
    public String toString()
    {
        String nameString, courseString, avgString;
        nameString = firstName + " " + lastName + "\n";
        courseString = "is taking " + calc.courseID + ", " + bio.courseID + ", and " + phys.courseID + "\n";
        avgString = "The average across all classes is " + avg;
        return nameString + courseString + avgString;
    }
}
//basic class Course
class Course{
    public int score = 0;
    public String courseID;
    public int setScore(int inScore){
        score = inScore;
        return score;
    }
    public Course(String aCourseID){
        courseID = aCourseID;
    }
    public int getScore(){
        return score;
    }
}
