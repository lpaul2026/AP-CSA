package com.mycompany.studentmain;
import java.util.Scanner;

/**
 *
 * @author LPaul2026
 */

//public class
public class StudentMain{
    public static void main(String args[]){
        //create a new Student object
        Student st1 = new Student("Bob", "Smith");
        //call the average method from the Student class
        int average = st1.getAverage();
        //print out from the toString method
        System.out.println(st1);
    }
}
//basic class Student - should have 3 courses
class Student{
    //creating a private variable which will store the average int
    private int avg;
    //creating private variables for the student's name
    private String firstName, lastName;
    //creating 3 course objects
    Course calc = new Course("Calculus");
    Course bio = new Course("Biology");
    Course phys = new Course("Physics");
    //setting the scores of each course
    private int c = calc.setScore(85);
    private int b = bio.setScore(92);
    private int p = phys.setScore(76);
    //empty constructor to create empty Student object
    public Student()
    {
        firstName = "";
        lastName = "";
    }
    //basic constructor to create Student object with name only
    public Student(String first, String last){
        firstName = first;
        lastName = last;
    }
    //method to get the average across all classes
    public int getAverage(){
        avg = (c + b + p)/3;
        return avg;
    }
    //basic toString code, printing out all info
    public String toString()
    {
        String nameString, courseString, avgString;
        nameString = firstName + " " + lastName + "\n";
        courseString = "is taking " + calc.courseID + ", " + bio.courseID + ", and " + phys.courseID + "\n";
        avgString = "The average across all classes is " + avg;
        return nameString + courseString + avgString;
    }
}
//basic class Course
class Course{
    //setting initial test score to 0
    public int score = 0;
    //String for the name of the course
    public String courseID;
    //method to be called for setting the score
    public int setScore(int inScore){
        score = inScore;
        return score;
    }
    //constructor for course objects with a string
    public Course(String aCourseID){
        courseID = aCourseID;
    }
    //method for getting the score
    public int getScore(){
        return score;
    }
}
